---
interface Props {
  title?: string;
  image?: string;
  imagePosition?: 'left' | 'right';
  darkBackground?: boolean;
}

const { title, image, imagePosition = 'right', darkBackground = false } = Astro.props;

const bgColor = darkBackground ? 'bg-black/40' : 'bg-transparent';
---

<section class={`py-16 sm:py-24 relative overflow-hidden ${bgColor}`}>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class={`flex flex-col lg:flex-row gap-12 lg:gap-20 items-center ${imagePosition === 'left' ? 'lg:flex-row-reverse' : ''}`}>
      
      <!-- Text Content -->
      <div class="flex-1 flex flex-col gap-6">
        {title && (
          <h2 class="text-3xl font-medium tracking-tight sm:text-4xl text-white">
            <span class="border-b-4 border-[#FFBD33] pb-2">{title}</span>
          </h2>
        )}
        
        <div class="text-primary-200/80 text-lg leading-relaxed space-y-4">
          <slot />
        </div>
      </div>

      <!-- Image Content -->
      {image && (
        <div class="flex-1 w-full relative group">
          <div class="absolute inset-0 bg-[#FFBD33]/20 blur-3xl -z-10 rounded-full opacity-20 group-hover:opacity-30 transition-opacity duration-500"></div>
          <img 
            src={image} 
            alt={title || "Section Image"} 
            class="rounded-3xl border border-white/10 shadow-2xl w-full h-auto object-cover transform transition-transform duration-500 hover:scale-[1.02]"
          />
        </div>
      )}
    </div>
  </div>
</section>
