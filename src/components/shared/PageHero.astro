---
interface Props {
  title: string;
  description: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title, 
  description, 
  backgroundImage = '/assets/itechon.png',
  ctaText = 'Get a Free Quote',
  ctaLink = '/contact' 
} = Astro.props;
---

<section class="relative py-20 lg:py-32 overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-r from-black/90 via-black/80 to-black/60 z-10"></div>
    <img 
      src={backgroundImage} 
      alt="Hero Background" 
      class="w-full h-full object-cover"
    />
  </div>

  <!-- Decorative Blobs -->
  <div class="absolute top-[-10%] right-[-5%] w-[500px] h-[500px] bg-[#FFBD33]/20 blur-[150px] rounded-full mix-blend-screen opacity-40 z-10 pointer-events-none"></div>

  <div class="relative z-20 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white tracking-tight mb-6">
        {title}
      </h1>
      <p class="text-xl text-primary-200/90 mb-8 leading-relaxed">
        {description}
      </p>
      
      {ctaText && (
        <a
          href={ctaLink}
          class="inline-flex items-center justify-center rounded-lg bg-[#FFBD33] px-8 py-4 text-base font-bold text-black transition hover:bg-[#ffb01f] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#FFBD33] hover:-translate-y-1 hover:shadow-lg hover:shadow-[#FFBD33]/20 duration-300"
        >
          {ctaText}
        </a>
      )}
    </div>
  </div>
</section>
