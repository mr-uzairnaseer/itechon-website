<section class="relative py-24 sm:py-32 overflow-hidden bg-[#0c0a09]">
  <!-- Background Gradients -->
  <div class="absolute inset-0 pointer-events-none">
     <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-7xl h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-[#FFBD33]/10 via-transparent to-transparent opacity-40"></div>
     <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-[#FFBD33]/5 blur-[120px] rounded-full mix-blend-screen"></div>
  </div>

  <div class="relative mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8 text-center z-10">
    <div class="flex flex-col items-center gap-10">
      
      <div class="flex flex-col gap-6 max-w-3xl">
        <h2 class="text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl text-white">
          Ready to <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#FFBD33] to-amber-200">Innovate?</span>
        </h2>
        <p class="text-xl text-primary-200/80 leading-relaxed font-light">
          Stop planning and start building. Our team of experts is ready to turn your complex challenges into elegant software solutions.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto mt-4">
        <a
          href="/contact"
          class="group relative inline-flex items-center justify-center rounded-full bg-[#FFBD33] px-10 py-5 text-lg font-bold text-black transition-all hover:bg-[#ffb01f] hover:scale-105 hover:shadow-[0_0_40px_rgba(255,189,51,0.4)] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#FFBD33]"
        >
          <span class="relative z-10">Start Your Project</span>
          <div class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300 ease-out rounded-full"></div>
        </a>
        
        <a
          href="/case-studies"
          class="inline-flex items-center justify-center rounded-full px-10 py-5 text-lg font-bold text-white border border-white/20 hover:bg-white/10 transition-all hover:border-[#FFBD33]/50 backdrop-blur-sm"
        >
          View Case Studies
        </a>
      </div>
      
    </div>
  </div>
</section>
