---
interface Props {
  heading: string;
  subheading?: string;
  content: string;
  stats?: {
    value: string;
    label: string;
  }[];
}

const { heading, subheading, content, stats = [] } = Astro.props;
---

<section class="py-20 sm:py-32 bg-primary-950 relative overflow-hidden">
    <!-- Texture -->
    <div class="absolute inset-0 bg-[url('/assets/noise.png')] opacity-[0.03] mix-blend-overlay"></div>
    
    <!-- Top Divider -->
    <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-[#FFBD33]/30 to-transparent"></div>

    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8 relative z-10">
        <div class="grid gap-16 lg:grid-cols-12 lg:gap-24 items-start">
            <!-- Left: Heading & Context -->
            <div class="lg:col-span-5 flex flex-col gap-8 sticky top-32">
               <div class="flex flex-col gap-4">
                 <span class="text-[#FFBD33] font-bold tracking-widest uppercase text-sm flex items-center gap-2">
                    <span class="w-8 h-[1px] bg-[#FFBD33]"></span>
                    {subheading}
                 </span>
                 <h2 class="text-4xl font-bold tracking-tight sm:text-5xl text-white leading-tight">
                    {heading}
                 </h2>
               </div>
               
               <!-- Key Stat Highlight -->
               {stats.length > 0 && (
                   <div class="p-8 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm relative overflow-hidden group hover:border-[#FFBD33]/50 transition-colors duration-300">
                        <div class="absolute -right-4 -top-4 w-24 h-24 bg-[#FFBD33]/20 blur-2xl rounded-full group-hover:bg-[#FFBD33]/30 transition-all"></div>
                        <div class="relative z-10 flex flex-col gap-2">
                             <span class="text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-[#FFBD33] to-amber-200">{stats[0].value}</span>
                             <span class="text-sm font-medium text-white/50 uppercase tracking-widest">{stats[0].label}</span>
                        </div>
                   </div>
               )}
            </div>
            
            <!-- Right: Content -->
            <div class="lg:col-span-7 flex flex-col gap-10">
                <p class="text-xl md:text-2xl text-primary-200/90 leading-relaxed font-light">
                    {content}
                </p>
                
                {/* Secondary stats grid if more than 1 */}
                {stats.length > 1 && (
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 pt-10 border-t border-white/10">
                        {stats.slice(1).map(stat => (
                            <div class="flex flex-col gap-1 pl-6 border-l-2 border-[#FFBD33]/30">
                                <span class="text-3xl font-bold text-white">{stat.value}</span>
                                <span class="text-sm text-primary-200/60 uppercase tracking-wide">{stat.label}</span>
                            </div>
                        ))}
                    </div>
                )}
                
                 <!-- Decorative signature or brand mark -->
                 <div class="pt-8 opacity-30">
                    <img src="/assets/ITECHON.png" alt="ITECHON" class="h-8 grayscale invert" />
                 </div>
            </div>
        </div>
    </div>
</section>
