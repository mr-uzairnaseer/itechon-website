<div
  x-data="{ show: false }"
  x-init="setTimeout(() => show = true, 5000)"
  x-show="show"
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
  x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
  x-transition:leave="transition ease-in duration-200"
  x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
  x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
  class="fixed inset-0 z-[100] flex items-center justify-center px-4 sm:px-6 z-50 pointer-events-none"
  style="display: none;" 
  x-bind:style="show ? 'display: flex' : 'display: none'"
>
  <!-- Backdrop -->
  <div 
    class="absolute inset-0 bg-black/60 backdrop-blur-xl transition-opacity pointer-events-auto" 
    @click="show = false"
  ></div>

  <!-- Modal Panel -->
  <div class="relative w-full max-w-[49.75rem] overflow-hidden rounded-2xl bg-[#1a1a1a] p-8 shadow-2xl ring-1 ring-white/10 sm:px-12 sm:py-[2.8rem] pointer-events-auto">
    <!-- Close Button -->
    <button 
      type="button" 
      class="absolute right-5 top-5 text-gray-400 hover:text-[#FFBD33] hover:rotate-90 transition-all duration-300 focus:outline-none"
      @click="show = false"
    >
      <span class="sr-only">Close</span>
      <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <div class="text-center">
      <h3 class="text-3xl font-bold tracking-wide text-white mb-5">
        Got a software project in mind but not sure how much itâ€™ll cost or how to start?
      </h3>
      <p class="text-lg leading-relaxed text-gray-100 mb-9 max-w-[40rem] mx-auto">
        Use our Estimation Tool for quick budget insights or book a complimentary Prototyping Session to define and shape your project idea.
      </p>

      <div class="flex flex-col gap-5 sm:flex-row sm:justify-center">
        <!-- Primary Button -->
        <a
          href="/contact"
          class="popup-btn group relative inline-flex items-center justify-center gap-3 rounded-md bg-[#111111] px-10 py-3 text-base font-extrabold tracking-wide text-white transition-all duration-300 hover:bg-[#FFBD33] hover:-translate-y-0.5"
          style="box-shadow: 0 4px 0 #FFBD33;"
        >
          <span>ESTIMATE NOW</span>
        </a>

        <!-- Secondary Button -->
        <a
          href="/contact"
          class="popup-btn group relative inline-flex items-center justify-center gap-3 rounded-md bg-[#111111] px-10 py-3 text-base font-extrabold tracking-wide text-white transition-all duration-300 hover:bg-[#FFBD33] hover:-translate-y-0.5"
           style="box-shadow: 0 4px 0 #FFBD33;"
        >
          <span>BOOK PROTOTYPE</span>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .popup-btn:hover {
    color: black !important;
  }
  .popup-btn:hover span {
    color: black !important;
  }
</style>
