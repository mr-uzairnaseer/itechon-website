---

<section class="py-16 sm:py-20 relative overflow-hidden">
  <!-- Features Background Glow -->
  <div class="absolute inset-0 -z-10 pointer-events-none flex justify-center items-center">
    <div class="w-[600px] h-[600px] bg-primary-700/5 blur-[200px] rounded-full mix-blend-screen opacity-30"></div>
  </div>
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="grid gap-12 lg:grid-cols-3 lg:gap-8">
      <!-- Left Column: Sticky Header -->
      <div class="relative">
        <div class="sticky  flex flex-col gap-6 pt-8">
          <div class="flex flex-col gap-4">
            <h2 class="text-3xl font-bold tracking-tight sm:text-4xl text-primary-950 dark:text-white">
              Common <span class="text-[#FFBD33]">Questions</span>
            </h2>
            <p class="text-primary-950/60 dark:text-primary-200/60 text-lg leading-relaxed">
              Everything you need to know about working with us. Can't find the answer you're looking for?
            </p>
          </div>
          <div class="flex flex-col gap-4 relative z-10">
            <a
              href="/contact"
              class="inline-flex w-fit items-center justify-center rounded-full bg-primary-950 dark:bg-white px-8 py-3 text-base font-bold text-white dark:text-primary-950 transition hover:bg-primary-800 dark:hover:bg-gray-100"
            >
              Contact Support
            </a>
          </div>
          
          {/* Spiral Arrow pointing to questions */}
          <div class="hidden lg:block absolute top-[90%] left-[50%] w-full opacity-50 pointer-events-none">
             <svg width="200" height="200" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-[#FFBD33] rotate-12">
              <path d="M10 10 Q 50 10 50 50 T 90 90" stroke="currentColor" stroke-width="2" stroke-dasharray="4 4" fill="none"/>
              <path d="M85 80 L 90 90 L 80 95" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
      </div>
      <div class="lg:col-span-2 space-y-4">
        <dl
          class="flex flex-col gap-4"
          x-data="{ selected: 0, toggle(value) { this.selected = this.selected === value ? null : value } }"
        >
          {
            questions.map((question, index) => (
              <div
                class="group rounded-2xl bg-white dark:bg-primary-950/50 border border-primary-950/5 dark:border-primary-200/5 transition-all duration-300"
                x-data={`{ id: ${index}, get isOpen() { return this.id === this.selected } }`}
                x-bind:class="{ 'shadow-lg ring-1 ring-[#FFBD33]/50 scale-[1.01] bg-primary-50/50 dark:bg-primary-900/50': isOpen, 'hover:border-[#FFBD33]/30 hover:shadow-md': !isOpen }"
              >
                <dt>
                  <button
                    type="button"
                    class="flex w-full items-center justify-between py-6 px-6 text-left focus-visible:outline-none"
                    aria-controls={question.id}
                    x-on:click="toggle(id)"
                    aria-expanded="false"
                    x-bind:aria-expanded="isOpen.toString()"
                  >
                    <span 
                        class="font-medium text-lg text-primary-950 dark:text-primary-200 transition-colors"
                        x-bind:class="{ 'text-[#FFBD33] font-bold': isOpen }"
                    >
                        {question.title}
                    </span>
                    <span class="ml-6 flex items-center">
                      <span 
                        class="flex h-8 w-8 items-center justify-center rounded-full border border-primary-950/10 dark:border-primary-200/10 transition-colors"
                        x-bind:class="{ 'bg-[#FFBD33] border-[#FFBD33] text-primary-950': isOpen, 'text-primary-400': !isOpen }"
                      >
                          <svg
                            class="h-4 w-4 transform transition-transform duration-300"
                            x-bind:class="{ 'rotate-180': isOpen, 'rotate-0': !isOpen }"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                          >
                            <path d="M6 9l6 6 6-6" />
                          </svg>
                      </span>
                    </span>
                  </button>
                </dt>
                <dd class="" id={question.id} x-show="isOpen" x-cloak x-collapse>
                  <div class="px-6 pb-6 pt-2">
                    <p class="text-primary-950/70 dark:text-primary-200/70 text-base leading-relaxed">
                      {question.answer}
                    </p>
                  </div>
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </div>
</section>
