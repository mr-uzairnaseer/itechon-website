  {
    name: 'Digital Transformation',
    icon: '/assets/digital-transformation.svg',
    description: 'Reimagine your business with digital-first strategies.',
  },
  {
    name: 'Artificial Intelligence',
    icon: '/assets/ai.svg',
    description: 'Empower your systems with intelligent decision-making.',
  },
  {
    name: 'Machine Learning',
    icon: '/assets/ml.svg',
    description: 'Algorithms that learn and adapt to your data.',
  },
  {
    name: 'Cloud & DevOps',
    icon: '/assets/devops.svg',
    description: 'Scalable infrastructure and streamlined deployment pipelines.',
  },
  {
    name: 'MVP Development',
    icon: '/assets/mvp-dev.svg',
    description: 'Launch your product vision quickly and effectively.',
  },
  {
    name: 'Product Engineering',
    icon: '/assets/software-product-eng.svg',
    description: 'End-to-end development of robust software products.',
  },
  {
    name: 'Process Automation',
    icon: '/assets/process-automation.svg',
    description: 'Automate repetitive workflows for efficiency.',
  },
  {
    name: 'Data Analytics',
    icon: '/assets/data-analytics.svg',
    description: 'Turn raw data into actionable insights.',
  },
  {
    name: 'Mobile Apps',
    icon: '/assets/mobile-apps.svg',
    description: 'Native and cross-platform mobile experiences.',
  },
  {
    name: 'Website & Web Apps',
    icon: '/assets/website-web-apps.svg',
    description: 'High-performance websites and web applications.',
  },
  {
    name: 'eCommerce & CMS',
    icon: '/assets/ecommerce.svg',
    description: 'Scalable online stores and content management systems.',
  },
  {
    name: 'SaaS / PaaS',
    icon: '/assets/saas.svg',
    description: 'Cloud-based software and platform solutions.',
  },
  {
    name: 'ERP & CRM',
    icon: '/assets/erp.svg',
    description: 'Enterprise resource planning and customer management.',
  },
  {
    name: 'Software Maintenance',
    icon: '/assets/software-maintenance.svg',
    description: 'Keep your software running smoothly and securely.',
  },
  {
    name: 'QA Testing Automation',
    icon: '/assets/qa-testing.svg',
