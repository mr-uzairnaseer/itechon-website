<footer
  class="relative overflow-hidden bg-gradient-to-br from-primary-900 via-primary-950 to-black pt-16 pb-8 sm:pt-20 lg:pt-24"
  aria-labelledby="footer-heading"
>
  <!-- Background Decorations -->
  <!-- Decorative Background Elements from CTA -->
  <div class="absolute inset-0 -z-10 text-center">
    <div class="absolute top-0 left-1/4 -translate-x-1/2 w-[500px] h-[500px] bg-[#FFBD33]/10 rounded-full blur-[100px] opacity-20 pointer-events-none"></div>
    <div class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-primary-600/10 rounded-full blur-[100px] pointer-events-none"></div>
  </div>

  <h2 id="footer-heading" class="sr-only">Footer</h2>
  
  <div class="mx-auto max-w-7xl px-6 pb-8 lg:px-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      {/* Brand Section */}
      <div class="space-y-8">
        <h3 class="text-4xl font-bold tracking-tighter text-white flex items-center gap-2">
          Get in touch
          <span class="text-[#FFBD33] text-5xl animate-pulse">.</span>
        </h3>
        <!-- <p class="text-lg leading-relaxed text-primary-300 max-w-sm">
          Engineering the future of digital business. We build robust, scalable, and intelligent software solutions that drive growth.
        </p> -->

        <!-- Contact Info -->
        <div class="flex flex-col gap-4 mt-6 text-sm text-primary-300">
          <a href="mailto:info@itechon.com" class="flex items-start gap-3 group hover:text-[#FFBD33] transition-colors">
