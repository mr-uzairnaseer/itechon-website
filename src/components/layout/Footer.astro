              {bottomLinks[1].links.map((item) => (
                <li>
                  <a href={item.href} class="text-sm leading-6 text-primary-300 hover:text-[#FFBD33] hover:pl-2 transition-all duration-300 block">
                    {item.name}
                  </a>
                </li>
              ))}
            </ul>
