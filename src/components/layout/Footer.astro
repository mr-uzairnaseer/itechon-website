             </a>
             <a href="#" class="hover:text-[#FFBD33] transition-colors relative group">
                Sitemap
                <span class="absolute -bottom-1 left-0 w-0 h-px bg-[#FFBD33] transition-all group-hover:w-full"></span>
             </a>
        </div>
        
        <!-- Socials -->
        <div class="flex gap-4">
          {socialLinks.map((item) => (
            <a
              href={item.href}
              class="group relative flex h-10 w-10 items-center justify-center rounded-full bg-white/5 transition-colors duration-300 hover:bg-[#FFBD33]"
            >
              <span class="sr-only">{item.name}</span>
              <svg
                class="h-4 w-4 fill-current text-white transition-colors group-hover:text-primary-950"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                  <path d={item.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
