---
import { hireMenu } from '../../data/navigation';
---

<div
  class="w-full bg-[#1a1a1a] text-white py-8 px-4 sm:px-6 lg:px-8 border-t border-white/10 shadow-2xl"
>
  <div class="mx-auto max-w-7xl">
    <!-- Header -->
    <div class="mb-6 border-b border-white/10 pb-6">
      <h3 class="text-lg font-medium tracking-wide text-gray-200">
        Hire dedicated developers to scale capacity on demand while you stay in control.
      </h3>
    </div>

    <!-- Grid (Masonry Layout) -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-x-4 text-sm">
      
      <!-- COLUMN 1 -->
      <div class="flex flex-col gap-y-3">
        {hireMenu.slice(0, 1).map((category) => (
          <div class="space-y-2">
            <h4 class="flex items-center gap-2 font-bold text-[#FFBD33] uppercase text-sm tracking-wide">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={category.iconPath} />
              </svg>
              {category.title}
            </h4>
            <ul class="space-y-1">
              {category.items.map((item) => (
                <li>
                  <a href={item.href} class="group flex items-center justify-between rounded-md px-2.5 py-1 text-gray-400 transition-all hover:bg-white/5 hover:text-[#FFBD33]">
                    <span>{item.name}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-0 transition-all duration-200 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
             <a
              href="#"
              class="inline-flex items-center justify-center rounded-lg bg-[#FFBD33] px-6 py-2.5 text-sm font-bold text-black transition hover:bg-[#ffb01f] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#FFBD33] w-fit mt-4"
              style="color: #000000 !important;"
            >
              BUILD A DEDICATED TEAM
            </a>
          </div>
        ))}
      </div>

      <!-- COLUMN 2 -->
      <div class="flex flex-col gap-y-3">
        {hireMenu.slice(1, 3).map((category) => (
          <div class="space-y-2">
            <h4 class="flex items-center gap-2 font-bold text-[#FFBD33] uppercase text-sm tracking-wide">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={category.iconPath} />
              </svg>
              {category.title}
            </h4>
             <ul class="space-y-1">
              {category.items.map((item) => (
                <li>
                  <a href={item.href} class="group flex items-center justify-between rounded-md px-2.5 py-1 text-gray-400 transition-all hover:bg-white/5 hover:text-[#FFBD33]">
                    <span>{item.name}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-0 transition-all duration-200 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <!-- COLUMN 3 -->
      <div class="flex flex-col gap-y-3">
         {hireMenu.slice(3, 5).map((category) => (
          <div class="space-y-2">
            <h4 class="flex items-center gap-2 font-bold text-[#FFBD33] uppercase text-sm tracking-wide">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={category.iconPath} />
              </svg>
              {category.title}
            </h4>
             <ul class="space-y-1">
              {category.items.map((item) => (
                <li>
                  <a href={item.href} class="group flex items-center justify-between rounded-md px-2.5 py-1 text-gray-400 transition-all hover:bg-white/5 hover:text-[#FFBD33]">
                    <span>{item.name}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-0 transition-all duration-200 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
      
      <!-- COLUMN 4 -->
      <div class="flex flex-col gap-y-3">
         {hireMenu.slice(5, 8).map((category) => (
          <div class="space-y-2">
            <h4 class="flex items-center gap-2 font-bold text-[#FFBD33] uppercase text-sm tracking-wide">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={category.iconPath} />
              </svg>
              {category.title}
            </h4>
             <ul class="space-y-1">
              {category.items.map((item) => (
                <li>
                  <a href={item.href} class="group flex items-center justify-between rounded-md px-2.5 py-1 text-gray-400 transition-all hover:bg-white/5 hover:text-[#FFBD33]">
                    <span>{item.name}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-0 transition-all duration-200 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
      
    </div>
  </div>
</div>
